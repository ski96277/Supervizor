<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/registration_bg_Color"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Update Company Profile"
            android:textColor="@color/text_black_color"
            android:textSize="25sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/company_profile_image_update"
            android:layout_width="112dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/upload_logo"
            app:civ_border_color="@color/border_color_profile_image"
            app:civ_border_width="2dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="15sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:paddingLeft="4sp"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:text="Name:"
                    />
                <TextView
                    android:id="@+id/email_save_In_update_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:paddingLeft="4sp"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:textSize="17sp"
                    android:text="Name:"
                    />
                <TextView
                    android:id="@+id/image_download_link_update_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:paddingLeft="4sp"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:textSize="17sp"
                    android:text="Name:"
                    />
                <TextView
                    android:id="@+id/password_update_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:paddingLeft="4sp"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:textSize="17sp"
                    android:text="Name:"
                    />
                <TextView
                    android:id="@+id/user_ID_update_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:paddingLeft="4sp"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:textSize="17sp"
                    android:text="Name:"
                    />
                <TextView
                    android:id="@+id/user_Type_update_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:paddingLeft="4sp"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:textSize="17sp"
                    android:text="Name:"
                    />
                <EditText
                    android:id="@+id/company_name_ET_ID_update"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="2"
                    android:drawablePadding="15dp"
                    android:hint="@string/company_name_hint"
                    android:inputType="text"
                    android:maxLines="1" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="15sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="4sp"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:text="Location:"
                    />
                <EditText
                    android:id="@+id/company_location_ET_ID_update"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="2"
                    android:drawablePadding="15dp"
                    android:hint="Location"
                    android:inputType="text"
                    android:maxLines="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="15sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:paddingLeft="4sp"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:text="Phone:"
                    />

                <EditText
                    android:id="@+id/company_contact_ET_ID_update"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="2"
                    android:drawablePadding="15dp"
                    android:hint="Contact"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
