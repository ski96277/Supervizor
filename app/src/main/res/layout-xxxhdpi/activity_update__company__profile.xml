        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:id="@+id/entry_time_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="@string/entry_time_signup"
                    android:textColor="@color/text_black_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/entry_time_TV_ID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:fontFamily="@font/doppio_one_regular"
                    android:paddingLeft="5dp"
                    android:textColor="#284A81"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:id="@+id/exit_time_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="@string/exit_time_signup"
                    android:fontFamily="@font/raleway_regular"
                    android:textColor="@color/text_black_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/exit_time_TV_ID"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:fontFamily="@font/doppio_one_regular"
                    android:paddingLeft="5dp"
                    android:textColor="#284A81"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:id="@+id/penalty_time_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/raleway_regular"
                    android:text="@string/penalty_time_signup"
                    android:textColor="@color/text_black_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/penalty_time_TV_ID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/doppio_one_regular"
                    android:textColor="#284A81"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/doppio_one_regular"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Working Days"

                android:textColor="@color/text_black_color"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/working_days_ET_ID_update"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="26"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/text_black_color"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/doppio_one_regular"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Delay Count"
                android:textColor="@color/text_black_color"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/delay_count_ET_ID_update"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/raleway_regular"
                android:gravity="center"
                android:hint="3"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/text_black_color"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/update_btn_company"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/signup_btn_bg"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/text_white_color"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"/>

    </LinearLayout>

</ScrollView>