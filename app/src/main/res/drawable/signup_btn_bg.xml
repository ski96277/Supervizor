<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <item android:state_pressed="true">
        <shape>
            <corners
                    android:radius="14dp"
            />
            <gradient
                    android:angle="45"
                    android:centerX="35%"
                    android:centerColor="#FFF"
                    android:startColor="#FFF"
                    android:endColor="#FFF"
                    android:type="linear"
            />
            <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
            />
            <size
                    android:width="270dp"
                    android:height="60dp"
            />
            <stroke
                    android:width="3dp"
                    android:color="#FFF"
            />
        </shape>
    </item>

    <item>
        <shape>
            <corners
                    android:radius="10dp"
            />
            <gradient
                    android:angle="45"
                    android:centerX="35%"
                    android:centerColor="#010D1B"
                    android:startColor="#010D1B"
                    android:endColor="#010D1B"
                    android:type="linear"
            />
            <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
            />
            <size
                    android:width="270dp"
                    android:height="60dp"
            />
            <stroke
                    android:width="2dp"
                    android:color="#033064"
            />
        </shape>
    </item>

</selector>