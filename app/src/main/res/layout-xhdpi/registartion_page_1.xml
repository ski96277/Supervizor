<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/registration_bg_Color"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="@string/company_profile_1"
            android:textColor="@color/text_black_color"
            android:textSize="25sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/company_profile_image_singup"
            android:layout_width="142dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/upload_logo"
            app:civ_border_color="@color/border_color_profile_image"
            app:civ_border_width="2dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5.5sp"
                    android:src="@drawable/company" />

                <EditText
                    android:id="@+id/company_name_ET_ID_singup"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="7"
                    android:drawablePadding="15dp"
                    android:hint="@string/company_name_hint"
                    android:inputType="text"
                    android:maxLines="1" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5.5sp"
                android:src="@drawable/location" />


            <EditText
                android:id="@+id/company_location_ET_ID_singup"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="4sp"
                android:layout_weight="7"
                android:drawablePadding="15dp"
                android:hint="Location"
                android:inputType="text"
                android:maxLines="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5.5sp"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/company_contact_ET_ID_singup"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="4sp"
                android:layout_weight="7"
                android:drawablePadding="15dp"
                android:hint="Contact"
                android:inputType="numberDecimal"
                android:maxLines="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5.5sp"
                android:src="@drawable/email_icon" />

            <EditText
                android:id="@+id/company_email_ET_ID_singup"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="4sp"
                android:layout_weight="7"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:inputType="text"
                android:maxLines="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5.5sp"
                    android:src="@drawable/pass_icon" />

                <EditText
                    android:id="@+id/company_password_ET_ID_singup"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="7"
                    android:drawablePadding="15dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/company_next_btn_1_ID_singup"
            android:layout_width="100sp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/signup_btn_bg"
            android:text="Next >"
            android:textAllCaps="false"
            android:textColor="#FFF" />
    </LinearLayout>

</ScrollView>