<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_border_draw_line">

    <TextView
        android:id="@+id/holiday_date_date_TV_ID"
        android:layout_width="match_parent"
        android:background="#010D1B"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Holiday :"
        android:textColor="#FFF"
        android:paddingTop="15sp"
        android:paddingLeft="10sp"
        android:paddingBottom="15sp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/holiday_event_details_ET_ID"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="15sp"
        android:gravity="top"
        android:hint="Task Description"
        android:maxHeight="35dp"
        android:paddingLeft="10sp"
        android:scrollbars="vertical"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/cancel_button_holiday_ID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:background="#010D1B"
            android:layout_marginRight="5sp"
            />

        <Button
            android:layout_marginLeft="5sp"
            android:id="@+id/ok_button_show_holiday_dialog_ID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#010D1B"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Add Event"

            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>