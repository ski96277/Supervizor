            android:entries="@array/employee_home" />
-->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_ET_ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:fontFamily="@font/raleway_italic"
            app:queryHint="search.."
            android:layout_marginLeft="10sp"
            android:inputType="text"
            android:maxLines="1" />

        <Button
            android:id="@+id/plus_icon_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0076FE"
            android:text="+"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#FFF"/>


    </LinearLayout>
    <!--add,  Employee , Moderator,Receptionist-->
    <LinearLayout
        android:id="@+id/add_emplo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:orientation="vertical"
        android:visibility="gone"
        >

    <!--    <Button
            android:layout_width="match_parent"
