<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:id="@+id/event_employee_name_TV_ID"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_gravity="center"
        android:text="Tamim :"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        />


    <EditText
        android:id="@+id/event_employee_title_name_TV_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Event title"
        android:gravity="center"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="25sp"
        android:textColor="#9C27B0"/>

    <EditText
        android:id="@+id/event_employee_Details_TV_ID"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5sp"
        android:gravity="top"
        android:textColor="#000"
        android:hint="Task Description"
        android:maxHeight="35dp"
        android:padding="25dp"
        android:scrollbars="vertical"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/event_employee_time_TV_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Select Time"
        android:focusable="false"
        android:gravity="center"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="25sp"
        android:textColor="#9C27B0"/>

    <EditText
        android:id="@+id/event_employee_Date_TV_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Select Date"
        android:focusable="false"
        android:gravity="center"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="25sp"
        android:textColor="#9C27B0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp">

        <Button
            android:id="@+id/event_employee_cancel_btn_ID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="#E91E63"
            android:layout_marginRight="5sp"
            />

        <Button
            android:layout_marginLeft="5sp"
            android:id="@+id/event_employee_submit_event_btn_ID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#1EE958"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Add Event"

            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>