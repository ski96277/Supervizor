<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10sp"
    android:background="@drawable/background_border_draw_line">

    <TextView
        android:layout_marginTop="20sp"
        android:id="@+id/holiday_date_date_TV_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Event :"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/holiday_event_details_ET_ID"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15sp"
        android:gravity="top"
        android:textColor="#000"
        android:hint="Task Discription"
        android:maxHeight="35dp"
        android:paddingLeft="5dp"
        android:scrollbars="vertical"
        android:textSize="15sp"
        android:padding="5sp"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/cancel_button_holiday_ID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="#E91E63"
            android:layout_marginRight="5sp"
            />

        <Button
            android:layout_marginLeft="5sp"
            android:id="@+id/ok_button_show_holiday_dialog_ID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#1EE958"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Add Event"

            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>