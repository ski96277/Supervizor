<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_alert_event_show"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/leave_applicant_profile_image"
        android:layout_width="150sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:src="@drawable/profile_item"
        app:civ_border_color="#000"
        />

    <TextView
        android:id="@+id/leave_applicant_name_date_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2019/07/18"
        android:textColor="#499653"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/leave_title_TV_ID_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:text="Title text"
        android:textColor="#9C27B0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/leave_duration_TV_ID_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:text="01/05/2019 to 20/5/3021"
        android:textColor="#2B0B0B"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:paddingLeft="10sp"
        android:text="Details :"
        android:textColor="#9C27B0"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25sp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/leave_details_details_TV_ID_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:text="jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf jasdf j"
            android:textColor="#000"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel_btn_alert_show_ID_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="#9C27B0"
                android:textColor="#FFF"
                android:text="Cancel"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/accept_btn_alert_show_ID_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="#9C27B0"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:text="Accept" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>





</LinearLayout>