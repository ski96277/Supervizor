<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_nav"
        android:layout_width="132dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:src="@drawable/profile_white"
        app:civ_border_color="@color/border_color_profile_image"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/profile_company_name_TV_ID_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textSize="25sp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/text_white_color"
        android:text="@string/LOADING"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_gravity="center"
        android:textSize="20sp"
android:fontFamily="@font/raleway_regular"
        android:id="@+id/profile_company_email_TV_ID_nav"
        android:textColor="@color/text_white_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LOADING" />

</LinearLayout>
