<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_border_draw_line">

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" android:gravity="center"
        android:text="Choose a Option"
        android:textColor="#000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/general_event_btn_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:padding="15sp"
        android:text="Add General Event"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/holiday_btn_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:padding="15sp"
        android:text="Add Holiday"
        android:textAllCaps="false"
        android:textSize="25sp" />


    <Button
        android:id="@+id/cancel_alert_button_ID"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="70sp"
        android:background="#E91E63"
        android:gravity="center"

        android:text="Cancel"


        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>