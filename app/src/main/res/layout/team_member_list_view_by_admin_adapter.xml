<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    card_view:cardCornerRadius="10sp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_gravity="top"
        android:gravity="center"
        android:padding="5sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo_item_team_pending"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            card_view:civ_border_color="#000"
            card_view:civ_border_width="2dp" />

        <TextView
            android:id="@+id/employee_name_item_team_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/profile_photo_item_team_pending"
            android:gravity="left"
            android:paddingLeft="20sp"
            android:text="Employee name"
            android:textColor="@color/text_black_color"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/employee_designation_item_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/employee_name_item_team_pending"
            android:layout_toRightOf="@id/profile_photo_item_team_pending"
            android:gravity="left"
            android:paddingLeft="20sp"
            android:text="Employee Designation"
            android:textColor="@color/text_black_color"
            android:textSize="15sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>