<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                card_view:cardCornerRadius="24dp"
                card_view:cardElevation="0dp">

                <EditText
                    android:id="@+id/leave_title_ET_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Subject"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                android:background="@drawable/edit_text_bg"
                card_view:cardElevation="0dp">

                <EditText
                    android:id="@+id/leave_description_ET_ID"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="5sp"
                    android:gravity="top"
                    android:hint="Description"
                    android:maxHeight="35dp"
                    android:paddingLeft="5dp"
                    android:scrollbars="vertical"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                card_view:cardBackgroundColor="@color/green"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="10sp"
                        android:text="From :"
                        android:textColor="#000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/leave_start_Time_TV_ID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:drawableRight="@drawable/calendar_32"
                        android:gravity="center|left"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:textColor="#000"
                        android:textSize="25sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                card_view:cardBackgroundColor="@color/green"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="10sp"
                        android:text="UpTo :"
                        android:textColor="#000"
                        android:textSize="25sp" />

                    <TextView

                        android:id="@+id/leave_END_Time_TV_ID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:drawableRight="@drawable/calendar_32"
                        android:gravity="center|left"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:textColor="#000"
                        android:textSize="25sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="30sp"
                app:cardCornerRadius="10sp"
                card_view:cardBackgroundColor="@color/green"
                card_view:cardElevation="0dp">

                <Button
                    android:id="@+id/submit_leave_btn_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/green_color_submit_button_bg"
                    android:gravity="center"
                    android:maxHeight="35dp"
                    android:paddingLeft="80sp"
                    android:paddingRight="80sp"
                    android:scrollbars="vertical"
                    android:text="Submit"
                    android:textColor="#FFF"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>