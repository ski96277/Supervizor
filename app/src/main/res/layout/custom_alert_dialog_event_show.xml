<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/custom_alert_event_show"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_date_TV_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2019/07/18"
        android:textSize="25sp"
        android:fontFamily="@font/raleway_italic"
        android:textColor="#499653"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/event_title_TV_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title text"
        android:gravity="center"
        android:textSize="30sp"
        android:fontFamily="@font/ebrima"
        android:textColor="#000"
        android:paddingLeft="10sp"
        />
    <TextView
        android:id="@+id/time_title_TV_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time : 12.06 PM"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:fontFamily="@font/raleway_italic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details :"
        android:textSize="20sp"
        android:textColor="#000"
        android:fontFamily="@font/raleway_regular"
        android:paddingLeft="10sp"/>
        <TextView
            android:layout_marginTop="10sp"
            android:id="@+id/event_details_TV_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:fontFamily="@font/ebrima"
            android:text="Details: Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello Hello "
            android:textSize="25sp"
            android:gravity="left"
            android:textColor="#000"
            android:padding="5sp"
            tools:ignore="RtlCompat" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="55dp"

        android:layout_marginBottom="25sp">
        <Button
            android:id="@+id/cancel_btn_alert_show_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:fontFamily="@font/raleway_bolditalic"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="#9C27B0"/>

        <Button
            android:id="@+id/edit_btn_alert_show_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:fontFamily="@font/raleway_bolditalic"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:background="#1EE958"
            />
    </LinearLayout>
</LinearLayout>