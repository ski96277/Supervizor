<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_border_draw_line"
    android:orientation="vertical"
    android:padding="5sp">

    <TextView
        android:id="@+id/event_date_TV_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#010D1B"
        android:gravity="center"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Event :"
        android:textColor="#FCFFFC"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/event_title_ET_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Event title"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#0A0A0A"
        android:textColorHint="#A39C9C"
        android:textSize="25sp"
        android:paddingLeft="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_date_TV_ID" />

    <EditText
        android:id="@+id/event_details_ET_ID"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="top"
        android:hint="Task Description"
        android:maxHeight="35dp"
        android:paddingLeft="5dp"
        android:scrollbars="vertical"
        android:textColor="#000"
        android:textColorHint="#A39C9C"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_title_ET_ID" />

    <EditText
        android:id="@+id/event_Time_ET_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:gravity="center"
        android:hint="Select Time"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#9C27B0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_details_ET_ID" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_Time_ET_ID">

        <Button
            android:id="@+id/cross_image_button_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:background="#010D1B"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_ok_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="#010D1B"
            android:text="Add Event"

            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>